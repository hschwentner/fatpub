	H2 => 'H2',
	H3 => 'H3',

	# Body text
	HEADFIRST => 'HEADFIRST',
	paragraph_first_after_list => 'CHAP_BM',
	CHAP_BM => 'CHAP_BM',

	# Emphasizement
	ITAL => 'ITAL',
	BOLD => 'BOLD',
	BOLD_ITAL => 'BOLD_ITAL',
	SCAP => 'SCAP',
	SCAP_ITAL => 'SCAP_ITAL',
