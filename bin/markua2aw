	DT_LAST => 'DT_LAST',
	DT_NUM => 'DT_NUM',
	DT_BOLD => 'DT_BOLD',
	DT_ITAL => 'DT_ITAL',

	# Tips and notes
	SF1_TTL => 'SF1_TTL',
	SF1_FIRST => 'SF1_FIRST',
	SF2_TTL => 'SF2_TTL',
	SF2_FIRST => 'SF2_FIRST',

    # Asides and boxes
    BX1_TTL => 'BX1_TTL',
    BX1_H1 => 'BX1_H1',
