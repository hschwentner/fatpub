    # 	Headings
    PART_H1 => 'PART_H1',   
    PART_H2 => 'PART_H2',
    # 	Paragraphs
    PART_FIRST => 'PART_FIRST',
    PART => 'PART',
    # 	Lists, bulleted
    PART_BL_FIRST => 'PART_BL_FIRST',
    PART_BL_MID => 'PART_BL_MID',
    PART_BL_LAST => 'PART_BL_LAST',
    # 	Code
    PART_CDT_ONLY => 'PART_CDT_ONLY',
