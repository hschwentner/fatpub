	NL_FIRST => 'NL_FIRST',
	NL_MID => 'NL_MID',
	NL_LAST => 'NL_LAST',
	NL_NUM => 'NL_NUM',
	NL_NL_FIRST => 'NL_NL_FIRST',
	NL_NL_MID => 'NL_NL_MID',
	NL_NL_LAST => 'NL_NL_LAST',

	# Images and figures
	ARTLIST => 'artlist',
	FIG_TTL => 'FIG_TTL',
	FIG_NUM => 'FIG_NUM',

	# Footnotes
	FN => 'FN',                 # Todo...

	# Quotes and extracts
	CF_EPG_FIRST => 'CF_EPG_FIRST',
	CF_EPG_ATTR_AU_NA => 'CF_EPG_ATTR_AU_NA',
	EPG => 'EPG',
	EPG_ATTR_AU_NA => 'EPG_ATTR_AU_NA',
